[user]
	name = lloydlobo
	email = 76430758+lloydlobo@users.noreply.github.com
[alias]
	ad = add .
	br = branch
	ci = commit
	co = checkout
	lo = log --oneline -n 15
	st = status
	up = pull --rebase
	re = restore
[push]
	default = current
[rebase]
	autoStash = true
[init]
	defaultBranch = main
[color]
	ui = auto

# git-delta
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
