# BEGIN_KITTY_THEME
# Solarized8 Dark
include current-theme.conf
# END_KITTY_THEME

enable_audio_bell no

# alias fcl="fc-list : family spacing outline scalable | grep -e spacing=100 -e spacing=90 | grep -e outline=True | grep -e scalable=True"
disable_ligatures never
bold_font               auto
bold_italic_font        auto
italic_font             auto
font_size 9
font_family             JetBrainsMono Nerd Font Regular
# font_family             Input Mono
# font_family             TerminessTTF Nerd Font
# font_family             Fira Code Nerd Font Regular
# font_family             VictorMono Nerd Font

window_padding_width 0
# window_margin_width 4
background_opacity 0.85
dynamic_background_opacity yes
hide_window_decorations yes
placement_strategy center

shell fish

