!https://github.com/k-vernooy/dotfiles/blob/master/home/Xresources
! run $ xrdb .Xresources after change
!
Xft*dpi:          96
Xft*antialias:    true
Xft*hinting:      full

! Set terminal color scheme
! TODO: SET DIFFERENT BRIGHT/DARK VARIANTS

! special
*.foreground: #708183
*.cursorColor: #708183
*.selection_background: #002731
*.selection_foreground: #001e26
*.black: #121212

! black
*.color0: #001e26
*.color8: #002b36

! red
*.color1: #d01b24
*.color9: #bd3612

! green
*.color2:  #728905
*.color10: #465a61

! yellow
*.color3: #a57705
*.color11: #52676f

! blue
*.color4: #2075c7
*.color12: #708183

! magenta
*.color5: #c61b6e
*.color13: #5856b9

! cyan
*.color6: #259185
*.color14: #81908f

! white
*.color7: #e9e2cb
*.color15: #fcf4dc

! basic configuration
URxvt.scrollBar: false
URxvt.cursorBlink: true
URxvt.internalBorder: 4
URxvt.urlLauncher: firefox

URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! URxvt.transparent: true
! URxvt.shading:20

! Included this so you know how to make your foreground not match the color of your background
URxvt.foreground: #708183

! font options
! URxvt.font:       xft:Hack Nerd Font Mono: size=10: antialiasing=true
URxvt.font:       xft:Fira Code: size=12.5: antialiasing=true

! Enable normal copy/paste
URxvt.iso14755:        false
URxvt.iso14755_52:     false
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

!urxvt*background:rgba:1400/1900/2900/ff00
urxvt*depth:32
